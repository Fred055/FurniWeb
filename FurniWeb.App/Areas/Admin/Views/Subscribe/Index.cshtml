@model List<SubscribeGetDto>
@{
    int i = 0;
}



<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
                <th scope="col">Change Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscribe in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@subscribe.Name</td>
                    <td>@subscribe.Email</td>
                    <td>@subscribe.Status</td>
                    <td><a asp-controller="subscribe" asp-action="delete" asp-route-id="@subscribe.Id"><i class="btn btn-danger"></i>Delete</a></td>
                    <td><a class="btn btn-primary">Edit</a></td>
                    @if (subscribe.Status == true)
                    {
                        <td><a asp-controller="subscribe" asp-action="ChangeStatus" asp-route-id="@subscribe.Id" class="btn btn-warning">Make Passive</a></td>
                    }
                    else
                    {
                        <td><a asp-controller="subscribe" asp-action="ChangeStatus" asp-route-id="@subscribe.Id" class="btn btn-success">Reverse Status</a></td>
                    }
                    )

                </tr>
                i++;
            }

        </tbody>
    </table>

    <div style="float:right;">
        <a asp-controller="subscribe" asp-action="create" class="btn btn-success">Create subscribe</a>
    </div>
</div>
