@model List<ContactGetDto>
@{
    int i = 0;
}



<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
                <th scope="col">Change Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td><a asp-controller="contact" asp-action="GetById" asp-route="@contact.Id">@contact.FirstName</a></td>
                    <td>@contact.Email</td>
                    <td>@contact.Status</td>
                    <td><a asp-controller="contact" asp-action="delete" asp-route-id="@contact.Id"><i class="bi bi-trash"></i>Delete</a></td>
                    <td><a><i class="fa-solid fa-pencil">Edit</i></a></td>
                    <td><a asp-controller="contact" asp-action="ChangeStatus" asp-route-id="@contact.Id as class="btn btn-success">Change Status</a></td>

                </tr>
                i++;
            }

        </tbody>
    </table>

    <div style="float:right;">
        <a asp-controller="contact" asp-action="create" class="btn btn-success">Create contact</a>
    </div>
</div>
